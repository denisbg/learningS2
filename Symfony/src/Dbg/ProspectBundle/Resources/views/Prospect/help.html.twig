{% extends "DbgProspectBundle::layout.html.twig" %}
{% block title %} Help {{ parent() }} - Index surchargeant {% endblock %}
{% block body %}
<h2> Liste des aides </h2>
<ul>{% for article in articles %}
   <li>
     <a href="{{ path('dbgprospect_voir', {'id':article.id} ) }}">{{article.titre}}</a>
     par {{ article.auteur}},
     le {{ article.date|date('d/m/y')}}
	 <div class="well">
	 {{article.contenu }}
	 </div>
     </li>
     {% else %}
     <li> Pas encore! d'articles </li>
     {% endfor %}
</ul>
{% endblock %}
